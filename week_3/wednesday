array of char using poinetr:
#include<stdio.h>
void main()	//main function
{
    char ch1[] ="hii";		//assiging char array
    char ch2[] ="hey";		//assiging char array
    char ch3[] ="hello";	//assiging char array
    char *arr[2];	//pointer variabe declaration			
    arr[0] = ch1;	
    arr[1] = ch2;
    arr[2] = ch3;
    for(int i=0;i<3;i++)	//loop
    {
        printf("\n %p  %s",&arr[i],arr[i]); //output  	
    }
}
large and small number:
#include<stdio.h>

void main()	//main function
{
    int a[20],num,small=0,big=0;               // variable declaration 
    printf("\n enter the  array : ");   //getting input from user
    scanf("%d",&num);
    for(int i=0;i<num;i++)          //loop       
    {
        printf("\n enter",);		//getting input from user
        scanf("%d",&a[i]);
    }
    small = a[0];                         
    for(int i=0;i<num;i++)  //loop
    {
        if(big < a[i])            //condition checking 
        {
            big = a[i];
        }
        
        if(small >= a[i])         //condition checking 
        {
            small = a[i];
        }
    }
    
    printf("\nbiggest = %d",big);		//ouput
    
  printf("\nsmallest = %d",small);	//output
}
